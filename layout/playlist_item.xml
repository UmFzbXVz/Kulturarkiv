<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"><ImageView
    android:id="@+id/thumbnailImageView"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:scaleType="centerCrop"
    android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titel"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beskrivelse"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

    <ImageView
        android:id="@+id/removeFromPlaylistIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/cast_ic_expanded_controller_closed_caption"
        android:contentDescription="Fjern fra playliste"
        android:layout_marginStart="8dp" /></LinearLayout>

